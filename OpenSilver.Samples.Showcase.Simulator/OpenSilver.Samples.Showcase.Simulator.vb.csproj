<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Configurations>SL;SL.Release;UWP</Configurations>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net7.0-windows</TargetFramework>
		<OutputPath>bin/$(Configuration)/vb</OutputPath>
		<IntermediateOutputPath>obj/$(Configuration)/vb</IntermediateOutputPath>
	</PropertyGroup>
	
	<PropertyGroup Condition="'$(Configuration)' == 'SL' Or '$(Configuration)' == 'UWP'">
		<DebugType>full</DebugType>
		<Optimize>false</Optimize>
		<DefineConstants>DEBUG;TRACE</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'SL.Release'">
		<DebugType>none</DebugType>
		<Optimize>true</Optimize>
		<DefineConstants>TRACE</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="OpenSilver.Simulator" Version="1.2.0-preview-2023-10-05-100022-dbcb3462" />
  </ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\src\OpenSilver.Samples.VBShowcase.vbproj" />
	</ItemGroup>

</Project>